<div style="width: 100%">
    <ul id="demo1">

        @try
        {
            //string title = ViewData["firstOne"].ToString();
            string title = "hello";
            int iRow = 0;

            List<Stories.Factory.AnimalTypeList> myList = new List<Stories.Factory.AnimalTypeList>();
            Stories.Factory.AnimalTypeList list = new Stories.Factory.AnimalTypeList();
            list = ViewData["MyFavortiesData"] as Stories.Factory.AnimalTypeList;

            for (int i = 0; i < list.animalTypeLists.Count; i++)
            {


                if (title.ToUpper() != list.animalTypeLists[i].Title.Substring(0, 1).ToUpper())
                {


                    title = list.animalTypeLists[i].Title.Substring(0, 1);
                    iRow = 0;


                }

                if (list.animalTypeLists[i].Title.Length >= 40)
                {
                    list.animalTypeLists[i].Title = list.animalTypeLists[i].Title.Substring(0, 40);

                }

                string link1 = "";

                if (list.animalTypeLists[i].url != null)
                {

                    link1 = list.animalTypeLists[i].url;
                }
                else
                {
                    link1 = "http://twoboots.com";
                }




                <li>

                    <br />
                    <h2 style="color:white;">@list.animalTypeLists[i].Title &nbsp;&nbsp;&nbsp;&nbsp; <label style="color:blue;">select image for info</label> </h2>






                    <a href="@link1">

                        @try
                        {



                            string image = list.animalTypeLists[i].Picture;
                            if (image.Length > 0)
                            {
                                //string imagePath = "/images/";
                                string imagePath = "https://twoboots.today/images/";

                                <img src="@imagePath@image" style="max-width: 100%; max-height: 100%" />
                            }
                            else
                            {
                                <img src="../Images/bowl.jpg" style="max-width: 100%; max-height: 100%" />
                            }
                        }
                        catch
                        {
                        }
                    </a>



                </li>

                iRow++;
            }

        }
        catch (Exception ex)
        {
            Console.Write(ex.ToString());
        }

        </ ul >
        </ div >



        <script>
            $(function () {


                var demo1 = $("#demo1").slippry({
                    //transition: 'fade',
                    transition: 'horizontal',
                    useCSS: true,
                    //speed: 1000,
                    speed: 5000,
                    pause: 6000,
                    pager: false,
                    auto: true,
                    preload: 'visible',

                    // transitions
                    //transition: 'kenburns', // fade, horizontal, kenburns, false
                    kenZoom: 140,
                    speed: 2000 // time the transition takes (ms)



                });

                $('.init').click(function () {
                    demo1 = $("#demo1").slippry();
                    return false;
                });




            });
        </script>






