
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
<script src="~/Scripts/slippry.min.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/Content/slippry.css" />


<script>
    $(function () {


        var demo1 = $("#demo1").slippry({
            //transition: 'fade',
            transition: 'horizontal',
            useCSS: true,
            //speed: 1000,
            speed: 5000,
            pause: 6000,
            pager: false,
            auto: true,
            preload: 'visible',

            // transitions
            //transition: 'kenburns', // fade, horizontal, kenburns, false
            kenZoom: 140,
            speed: 2000 // time the transition takes (ms)



        });

        $('.init').click(function () {
            demo1 = $("#demo1").slippry();
            return false;
        });




    });
</script>

<div id="centerdivResults">

    <div class="col-md-2">
        <div>

        </div>
        <div>

        </div>
    </div>
    <div class="col-md-10">
        <ul id="demo1">

            @try
            {
                string title = ViewData["firstOne"].ToString();
                int iRow = 0;

                foreach (Cook.Models.MyFavoritesModel winner
              in (List<Cook.Models.MyFavoritesModel>)ViewData["MyFavortiesData"])
                {


                    if (title.ToUpper() != winner.Title.Substring(0, 1).ToUpper())
                    {


                        title = winner.Title.Substring(0, 1);
                        iRow = 0;


                    }

                    if (winner.Title.Length >= 40)
                    {
                        winner.Title = winner.Title.Substring(0, 40);

                    }


                    <li>
                        <h2 style="color:white;">@winner.Title &nbsp;&nbsp;&nbsp;&nbsp; <label style="color:blue;">select for info</label> </h2>

                        <a href="https://whatscookingtreasures.com/Home/Display?row=@winner.RECEIPTNO" target="_blank">
                            @try
                            {
                                string image = winner.picture;
                                if (image.Length > 0)
                                {
                                    //string imagePath = "/images/";
                                    string imagePath = "https://whatscookingtreasures.com/images/upload/";

                                    <img src="@imagePath@image" style="max-width: 100%; max-height: 100%" />
                                }
                                else
                                {
                                    <img src="../Images/bowl.jpg" style="max-width: 100%; max-height: 100%" />
                                }
                            }
                            catch
                            {
                            }
                        </a>



                    </li>

                    iRow++;
                }

            }
            catch
            {
            }

        </ul>
    </div>
