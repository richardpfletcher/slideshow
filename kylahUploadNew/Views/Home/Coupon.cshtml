    height="0">*@


<div class="row">

    <div class="col-md-6">
        <img src="/Content/twoboots.jpg" width="300" height="300" />




    </div>

    <div class="col-md-6">

        @using (Html.BeginForm("UploadCoupon", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {


            <table style="width: 55%">

                <tr>
                    <td>
                        <h2>Upload Your Coupon File</h2>
                    </td>

                </tr>

                <tr>
                    <td>
                        <p>Upload all new Coupon images. </p>
                    </td>

                </tr>

                <tr>
                    <td>
                        @Html.Label("Name of person uploading file")
                    </td>

                </tr>
                <tr>

                    <td>
                        @Html.DropDownList("newReader", (IEnumerable<SelectListItem>)ViewData["newReadersData"])
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.Label("Day of week for coupon")
                    </td>

                </tr>
                <tr>

                    <td>
                        @Html.DropDownList("daysOfWeek", (IEnumerable<SelectListItem>)ViewData["daysOfWeek"])
                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.Label("Name of Dish Title for Coupon")
                    </td>

                </tr>

                <tr>

                    <td>
                        @Html.DropDownList("newDishTitle", (IEnumerable<SelectListItem>)ViewData["newdishData"])
                    </td>
                </tr>

                <tr>
                    <td>

                        Coupon Start Date
                        <div class="input-group date" id="StartDate" data-date-format="mm/dd/yyyy" data-provide="datepicker-inline">
                            <input type="text" size="10" maxlength="9" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </td>
                </tr>


                <tr>
                    <td>

                        Coupon Stop Date
                        <div class="input-group date" id="StopDate" data-date-format="mm/dd/yyyy" data-provide="datepicker-inline">
                            <input type="text" size="10" maxlength="9" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>



                    </td>
                </tr>



                <tr>
                    <td>
                        @Html.Label("URL for picture when clicked")
                    </td>

                </tr>
                <tr>

                    <td>
                        <input type="text" id="url" name="url">

                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.Label("Picture Name")
                    </td>

                </tr>
                <tr>

                    <td>
                        <input type="text" id="picturename" name="picturename">

                    </td>
                </tr>




            </table>


            string idpic = (string)ViewData["id"];



            <input type="file" id="FileData" name="FileData" />



            @*<input type="hidden" id="idPhoto" name="idPhoto" value="@idpic" />*@
            <input type="hidden" id="idPhoto" name="idPhoto" />
            <input type="hidden" id="comments" name="comments" />
            <input type="hidden" id="idDayOfWeek" name="idDayOfWeek" />
            <input type="hidden" id="StopDate1" name="StopDate1" />
            <input type="hidden" id="StartDate1" name="StartDate1" />







            <input type="submit" id="UpdatePhoto" value="Upload File" />

        }


    </div>



</div>

<script type="text/javascript">
    $(function () {
        $("#newReader").change(function () {
            var selectedText = $(this).find("option:selected").text();
            var selectedValue = $(this).val();
            document.getElementById('idPhoto').value = selectedValue;


        });
    });
</script>

<script type="text/javascript">
    $(function () {
        $("#daysOfWeek").change(function () {
            var selectedText = $(this).find("option:selected").text();
            var selectedValue = $(this).val();
            document.getElementById('idDayOfWeek').value = selectedValue;


        });
    });
</script>

<script type="text/javascript">

    $("#StartDate").datepicker({ format: "mm/dd/yyyy" });
    $("#EndDate").datepicker({ format: "mm/dd/yyyy" });
   

</script>


