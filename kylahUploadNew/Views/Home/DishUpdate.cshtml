@model Stories.Factory.animalType

@{
    ViewBag.Title = "Slide Update";
}

<h2>Slide Update</h2>

@try
{
    int ID = (int)ViewData["ID"];

    string connect = System.Configuration.ConfigurationManager.ConnectionStrings["LocalURI"].ConnectionString;
    string filename = connect+"images/" + Model.Picture;
    //string filename = "C:\\Users\\Richard\\Google Drive\\WebSites\\kylah\\images\\" + Model.Picture;

    //string filename = "https://kylah.today/images/" + Model.Picture;
    string title = Model.Title;

    var Mode = Session["Mode"] as string;

    if (Mode =="save")
    {
        <h2 style="color: red;">Record is saved</h2>

    }

    string mode = "";
    Session["Mode"] = mode;





<div class="row">

    <div class="col-md-6">

        <h2>@title</h2> <br />
        <img src="@filename" width="300" height="300" />





    </div>

    <div class="col-md-6">

        @using (Html.BeginForm("DishUpdateFinal", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {


            <table style="width: 55%">

                <tr>
                    <td>
                        <h2>Edit Your PostFile</h2>
                    </td>

                </tr>

                <tr>
                    <td>
                        @Html.Label("Title")
                    </td>

                </tr>
                <tr>

                    <td>
                        @Html.TextBoxFor(model => model.Title, new { id = "title" })

                    </td>
                </tr>


                <tr>
                    <td>
                        @Html.Label("URL for picture when clicked")
                    </td>

                </tr>
                <tr>

                    <td>
                        @Html.TextBoxFor(model => model.url, new { id = "url" })

                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.Label("Picture Name")
                    </td>

                </tr>
                <tr>

                    <td>
                        @Html.TextBoxFor(model => model.Picture, new { id = "picture" })

                    </td>
                </tr>


            </table>

            <input type="submit" id="SaveChanges" value="Publish" />

            <input type="hidden" id="ID" name="ID" value="@Model.RECEIPTNO" />
            <input type="hidden" id="mode" name="mode" value="save" />




        }


    </div>



</div>

}
catch
{
}


